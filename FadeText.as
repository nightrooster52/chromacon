package  {	import flash.events.Event;	import fl.motion.Color;	import flash.text.TextField;	import flash.display.Sprite;		public class FadeText extends Sprite{		//lasts for 30 frames		public var life:int = 30;		public var txt:TextField = new TextField();		public function FadeText(type:String, amount:int) {			// constructor code			if (type == "healthDamage"){				txt.textColor = 0xFF0000;				amount *= -1;			}else if (type == "healing"){				txt.textColor = 0x00FF00;			}else if (type == "armorDamage"){				txt.textColor = 0xFF9900;				trace(type);				amount *= -1;			}else if (type == "armorBuild"){				txt.textColor = 0x00FFFF;			}									txt.text = amount.toString();			addChild(txt);			addEventListener(Event.ENTER_FRAME, update);		}		public function update(evt:Event):void{			if (life < 0){				removeEventListener(Event.ENTER_FRAME, update);				parent.removeChild(this);			}			trace(life);			life -=1;											}					}	}
package  {		public class Effect {				public var main:Prototype;		public var type:String;		public var requiresTarget:Boolean; //mostly for healing				public var healthDamage:int = 0;		public var armorDamage:int = 0;		public var healing:int = 0;		public var shielding:int = 0;				public var maxHD:int = 999999;		public var maxAD:int = 999999;		public var maxHeal:int = 999999;		public var maxShield:int = 999999;		public function Effect(main:Prototype) {			this.main = main;			// constructor code		}				public function activate(blocks:int):void{			if (healthDamage != 0){				main.enemy.takeHealthDamage(blocks*healthDamage);			}			if (armorDamage != 0){				main.enemy.takeArmorDamage(blocks*armorDamage);			}			if (shielding != 0){				main.player.buildShields(blocks*shielding);			}			if (healing != 0){				main.player.heal(blocks*healing);			}			//if this.requiresTarget, call main.requestTarget			//perform actions on main.enemy or main.friend		}	}	}